{
  "appId": "com.zapcut.studio",
  "productName": "Zapcut: AI Video Ads Generator & Editor",
  "directories": {
    "output": "build",
    "buildResources": "build-resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json",
    "!electron/bin/**/*"
  ],
  "extraResources": [
    {
      "from": "electron/bin/macos",
      "to": "bin/macos",
      "filter": ["ffmpeg", "ffprobe"]
    }
  ],
  "mac": {
    "category": "public.app-category.video",
    "target": ["dmg"],
    "icon": "build-resources/icons/zapcut-app-icon-transparent.png"
  },
  "win": {
    "target": ["nsis"],
    "icon": "build-resources/icons/zapcut-app-icon-small.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "build-resources/icons/zapcut-app-icon-transparent.png"
  }
}

